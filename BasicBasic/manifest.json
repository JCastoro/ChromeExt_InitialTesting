{
    "manifest_version": 3,
    "name": "Basic Testing",
    "version": "0.02",
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js": ["content.js"]
        }

    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "Test_Image.png",
        "default_popup": "popupWindow/Test_popup.html",
        "default_title": "This will trigger a popup"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}
