{
    "manifest_version": 2,
    "name": "Basic Testing",
    "version": "0.02",
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js": ["content.js"]
        }

    ],
    "background": {
        "scripts": ["background.js"]  
    },
    "browser_action": {
        "default_icon": "Test_Image.png",
        "default_popup": "popupWindow/Test_popup.html",
        "default_title": "This will trigger a popup"
    },
    "permissions": [
        "tabs"
    ]
}
